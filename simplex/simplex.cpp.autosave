float Simplex::simplex2(float c0, float c1)
{
	float s = (c0+c1) * 0.36602540378443860;
	float a0 = floor(c0+s);
	float a1 = floor(c1+s);
	float t = (a0+a1) * 0.21132486540518714;
	
	float n0 = 0.0;
	float n1 = 0.0;
	float n2 = 0.0;
	
	float p00 = c0-(a0-t);
	float p01 = 0.0;
	float p02 = 0.0;
	float p10 = c1-(a1-t);
	float p11 = 0.0;
	float p12 = 0.0;
	
	// Current gdscript casts false to 0 and true to 1
	int b0 = int(p00 > p10);
	int b1 = int(p00 <= p10);
	
	p01 = p00 - b0 + 0.21132486540518714;
	p11 = p10 - b1 + 0.21132486540518714;
	p02 = p00 + -0.577350269189626;
	p12 = p10 + -0.577350269189626;
	
	int A0 = int(a0)&255;
	int A1 = int(a1)&255;
	int g0 = (PERM[A0 + PERM[A1]] % 12) * 3;
	int g1 = (PERM[A0 + b0 + PERM[A1 + b1]] % 12) * 3;
	int g2 = (PERM[A0 + 1 + PERM[A1 + 1]] % 12) * 3;
	
	float f0 = 0.5 - p00*p00 - p10*p10;
	float f1 = 0.5 - p01*p01 - p11*p11;
	float f2 = 0.5 - p02*p02 - p12*p12;
	
	if (f0 > 0)
		n0 = f0*f0*f0*f0 * (GRAD3[g0]*p00 + GRAD3[g0 + 1]*p10);
	if (f1 > 0)
		n1 = f1*f1*f1*f1 * (GRAD3[g1]*p01 + GRAD3[g1 + 1]*p11);
	if (f2 > 0)
		n2 = f2*f2*f2*f2 * (GRAD3[g2]*p02 + GRAD3[g2 + 1]*p12);
	
	return (n0 + n1 + n2) * 70.0;
}

